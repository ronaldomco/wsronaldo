package variaveis;

public class ManipulaString {
	
	public static void main(String[] args) {
		
		String email = "RonaldoMCO@yahoo.COM.Br";
		System.out.println("Original.: " + email);
		System.out.println("Minusculo: " + email.toLowerCase());
		System.out.println("Maiusculo: " + email.toUpperCase());
		System.out.println("Qtde de Caracteres: " + email.length());
		System.out.println("Tem arroba? " + email.contains("@"));
		System.out.println("Qual a posição: " + email.indexOf("@"));
		System.out.println("Do 3o até o 5o caracter: " + email.substring(2,5)); 
		// pesquisa pos 2 até 4, a última não se inclui
		System.out.println("Do 3o até o fim: " + email.substring(2));
		// pesquisa da posicação 2 até o final, quando omitir o 2o argumento do método
		System.out.println("Primeira metade do email: " + email.substring(0, email.length()/2));
		System.out.println("Usuário: " + email.substring(0, email.indexOf("@")));
		System.out.println("Usuário: " + email.substring(0, email.indexOf("@")).toLowerCase());
		System.out.println("Servidor : " + email.substring(email.indexOf("@")+1));
		System.out.println("Servidor : " + email.substring(email.indexOf("@")+1).toLowerCase());
		System.out.println("Primeiro caracter: " + email.charAt(0));
		System.out.println("Primeiro caracter: " + email.charAt());
		System.out.println("Comparação " + email.contentEquals("RonaldoMCO@yahoo.COM.Br"));
		
		
	}

}