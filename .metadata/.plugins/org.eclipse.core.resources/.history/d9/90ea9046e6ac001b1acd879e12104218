package decisao;

import javax.swing.JOptionPane;

public class DesafioDecisaoSimples {

	public static void main(String[] args) {
	/*
	 * Pedir: Nome e Idade
	 * De acoerdo com as regras paa votação no Brasil
	 * oriente o usuário se ele pode votar, se ele não pode votar ou se o voto dele é facultativo
	 */

		String nome = JOptionPane.showInputDialog("Digite o seu Nome");
		int idade = Integer.parseInt(JOptionPane.showInputDialog("Digite a primeira nota:"));
		
		if (idade < 16) {
			System.out.println("Seu voto não é permitido");
		}
		if (idade >= 16 && idade > 70) {
			System.out.println("Seu voto é facultativo");
		}
		if (idade >= 18 && idade <= 70) {
			System.out.println("Seu voto é Obrigatório");
		
		
		
		
		
	}

}
